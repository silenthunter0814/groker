// .devcontainer/devcontainer.json
{
    "name": "LaTeX with Chinese Support",
    "image": "mcr.microsoft.com/vscode/devcontainers/base:ubuntu",
    "features": {
        "ghcr.io/devcontainers/features/docker-in-docker:2": {"flavor": "texlive-medium"} 
    },
    
    // 使用 apt-get 安装 TeXLive 的中文支持包和字体
    //"postCreateCommand": "tlmgr install --no-interactive ctex fontspec collection-langchinese collection-fontsrecommended || true",
    "customizations": {
        "vscode": {
            "extensions": [
                "james-yu.latex-workshop",
                "valentjn.vscode-ltex"
            ],
            "settings": {
    "latex-workshop.latex.recipes": [
        {
            "name": "xelatex -> bibtex -> xelatex*2",
            "tools": [
                "xelatex",
                "bibtex",
                "xelatex",
                "xelatex"
            ]
        }
    ], 
    "latex-workshop.latex.tools": [
        {
            "name": "xelatex",
            "command": "xelatex",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "%DOC%"
            ]
        }
    ],
                "latex-workshop.view.pdf.viewer": "tab"
            }
        }
    }

}

