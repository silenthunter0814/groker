// .devcontainer/devcontainer.json
{
    "name": "LaTeX with Chinese Support",
    "image": "mcr.microsoft.com/vscode/devcontainers/base:ubuntu",
    "features": {
        "ghcr.io/devcontainers/features/docker-in-docker:2": {} // 仅保留 D-I-D
    },
    
    // 使用 apt-get 安装 TeXLive 的中文支持包和字体
    "postCreateCommand": "sudo apt-get update && sudo apt-get install -y texlive-latex-extra texlive-lang-cjk latexmk fonts-noto-cjk",

    "customizations": {
        "vscode": {
            "extensions": [
                "james-yu.latex-workshop",
                "valentjn.vscode-ltex"
            ],
            "settings": {
                "latex-workshop.latex.recipe.default": "xelatex → 1x",
                "latex-workshop.latex.tools": [
                    {
                        "name": "xelatex",
                        "command": "xelatex",
                        "args": [
                            "-synctex=1",
                            "-interaction=nonstopmode",
                            "-file-line-error",
                            "%DOC%"
                        ]
                    }
                ],
                "latex-workshop.latex.recipes": [
                    {
                        "name": "xelatex → 1x",
                        "tools": [
                            "xelatex"
                        ]
                    }
                ],
                "latex-workshop.view.pdf.viewer": "tab"
            }
        }
    }
}